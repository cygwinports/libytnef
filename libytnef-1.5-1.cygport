DESCRIPTION="MS-TNEF attachment decoder library"
HOMEPAGE="http://ytnef.sourceforge.net/"
SRC_URI="mirror://sourceforge/ytnef/${P}.tar.bz"

abi=0
PKG_NAMES="${PN} ${PN}${abi} ${PN}-devel"
PKG_HINTS="setup dll devel"
PKG_CONTENTS[0]=  # empty
PKG_CONTENTS[1]="usr/bin/*-${abi}.dll usr/share/doc/"
PKG_CONTENTS[2]="usr/include/ usr/lib/"

# collision with <mapi.h> from cygwin
CYGCONF_ARGS="--includedir=/usr/include/ytnef"
